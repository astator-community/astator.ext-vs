<Window
  x:Class="VisualStudioExt.Pages.Connect"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:VisualStudioExt.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="连接设备"
  Width="320"
  Height="205"
  Background="#f0f0f0"
  KeyDown="Window_KeyDown"
  WindowStartupLocation="CenterOwner"
  mc:Ignorable="d"
>
  <Border Padding="20,15,20,10">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Width="75" VerticalAlignment="Center" FontSize="16" Text="ip地址" />
        <TextBox
          x:Name="Ip"
          Grid.Column="1"
          Height="25"
          VerticalContentAlignment="Center"
          Background="#f0f0f0"
          BorderThickness="0,0,0,1"
          FontSize="16"
        />
      </Grid>
      <Grid Grid.Row="1" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Width="75" VerticalAlignment="Center" FontSize="16" Text="历史记录" />
        <ComboBox
          x:Name="History"
          Grid.Column="1"
          Height="30"
          VerticalContentAlignment="Center"
          FontSize="14"
          SelectionChanged="ComboBox_SelectionChanged"
        />
      </Grid>
      <Grid Grid.Row="2" Margin="0,0,0,5" HorizontalAlignment="Right" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button
          Width="70"
          Height="30"
          Background="Transparent"
          BorderBrush="#a0a0a0"
          Click="Cancel_Click"
          Content="取消"
          FontSize="16"
        />
        <Button
          Grid.Column="1"
          Width="70"
          Height="30"
          Margin="15,0,0,0"
          Background="Transparent"
          BorderBrush="#6841f4"
          Click="Confirm_Click"
          Content="确认"
          FontSize="16"
        />
      </Grid>
    </Grid>
  </Border>
</Window>
